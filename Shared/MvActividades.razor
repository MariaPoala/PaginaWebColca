<div class="group relative rounded-sm " style="background: #e2e2e2;">
    <div class="w-full h-56 rounded-sm  overflow-hidden group-hover:opacity-75 lg:h-72 xl:h-80">
        <img src="@Url_IMG "
            alt="Hand stitched, orange leather long wallet." class="w-full h-full object-center object-cover">
    </div>
    <h3 class="mt-4 text-sm text-gray-700">
        <a href="#">
            @Fecha
        </a>
    </h3>
    <p class="mt-1 text-sm text-gray-500">@Descripcion</p>
</div>

@code {
    [Parameter]
    public string Url_IMG { get; set; }
    [Parameter]
    public string Fecha { get; set; }
    [Parameter]
    public string Descripcion { get; set; }
}