<div>
    <h3 class="text-lg leading-6 font-medium text-gray-900">@Titulo</h3>
    <dl class="mt-2 text-base text-gray-500">
        <div>
            <dd>@Nombre</dd>
        </div>
        <div class="mt-1">
            <dd>@Telefono</dd>
        </div>
    </dl>
</div>

@code {
    [Parameter]
    public string Titulo { get; set; }
    [Parameter]
    public string Nombre { get; set; }
    [Parameter]
    public string Telefono { get; set; }
}